<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>DatabaseServlet</servlet-name>
        <servlet-class>org.halls.servlets.AddStudentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>org.halls.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddMasonServlet</servlet-name>
        <servlet-class>org.halls.servlets.AddMasonServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddCarpenterServlet</servlet-name>
        <servlet-class>org.halls.servlets.AddCarpenterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>submitComplainsServlet</servlet-name>
        <servlet-class>org.halls.servlets.submitComplainsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddHallsOfficerServlet</servlet-name>
        <servlet-class>org.halls.servlets.AddHallsOfficerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DatabaseServlet</servlet-name>
        <url-pattern>/DatabaseServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddMasonServlet</servlet-name>
        <url-pattern>/AddMasonServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCarpenterServlet</servlet-name>
        <url-pattern>/AddCarpenterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>submitComplainsServlet</servlet-name>
        <url-pattern>/submitComplainsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddHallsOfficerServlet</servlet-name>
        <url-pattern>/AddHallsOfficerServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
